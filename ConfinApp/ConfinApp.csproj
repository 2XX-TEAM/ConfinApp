  <ItemGroup>
    <Compile Remove="Views\App.xaml.cs" />
  </ItemGroup>
  <ItemGroup>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="Controls\AboutPage.xaml.cs">
